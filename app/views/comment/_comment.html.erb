<h1>Comment</h1>

    <% @comment.each do |comment| %>
      <small><%= markdown comment.body, comment %></small>
          
    <% if can? :create, Comment %>
      <%= form_for [post, comment], html: { class: 'form-vertical' } do |f| %>
  
        <%= control_group_tag(comment[:body]) do %>
           <%= f.label :body, class: 'control-label' %>
          <div class="controls">
            <%= f.text_area :body, rows: 8 %>
          </div>
        <% end %>
        
        <div class="control-group">
          <div class="controls">
            <%= f.submit "Save", class: 'btn' %>
          </div>
        </div>
        <% end %>
    <% end %>
  </div>
</div>
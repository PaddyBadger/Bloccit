<h1><%= markdown @post.title %></h1>

<div class="row">
  <div class="span8">

    <small>
      <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
      submitted <%= time_ago_in_words(@post.created_at) %> ago by 
      <%= @post.user.name %>
    </small> 
    
    <p><%= markdown @post.body %></p>
        
    <p><%= image_tag(@post.image.thumb.url) if @post.image? %></p>
    
    <p><%= markdown @comment.body %></p>
     <%= render partial: 'comment/_comment.html.erb', collection: { post: @post, comment: @comment } %>
  </div>
  <div class="span4">
    <% if can? :edit, @post %>
      <%= link_to "Edit", edit_topic_post_path(@topic,@post), class: 'btn btn-large btn-block' %>
    <% end %>
  </div>
</div>



